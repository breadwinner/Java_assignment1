	void acceptPaymentFromStudent(Student s, Tuition t){}
	void sendConfirmationToStudent(Student s){}
			
}

class Bill{
	String name;
	Float price;
	Float getPrice(){}
	String getName(){}

}

class Tuition{
	float amount;
}

